@model RealEstate.Core.Application.ViewModels.User.UserSaveViewModel
@{
    bool mode = Model.IsVerified == false ? false : true;
    ViewData["Title"] = "Active User";
}

<div class="container-fluid">
    <div class="d-flex justify-content-center">
        <div class="col-6">
            <div class="card my-5">
                <div class="card-header bg-primary text-light">
                    <h3>
                        @(mode ? $"Esta seguro que desea desactivar este admin?" : $"Esta seguro que desea activar este admin?")
                    </h3>
                </div>
                <div class="card-body text-center">
                    <form method="post" asp-controller="Admin" asp-action="ActiveUser">
                        <input type="hidden" asp-for="Id" />

                        @if (mode)
                        {
                            <button type="submit" class="btn btn-danger me-3">Desactivar</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success me-3">Activar</button>
                        }
                        <a asp-controller="Admin" asp-action="AdminList" class="btn btn-outline-secondary text-dark">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>